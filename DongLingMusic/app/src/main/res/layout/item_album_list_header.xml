<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@color/appThemeColor"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_album_list_bg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:src="@drawable/icon_player"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_album_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:maxLines="1"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_album_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawablePadding="3dp"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/artist"
                    android:text="@string/author"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_publish_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/publish"
                    android:text="2017/5/1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_album_collect_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/star"
                    android:text="1000"/>

                <TextView
                    android:id="@+id/tv_album_listen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawablePadding="3dp"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/play"
                    android:text="7999"
                />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_album_share"
                    android:gravity="center_vertical"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/share"
                    android:text="50"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                          android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_album_comment_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawablePadding="3dp"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/comment"
                    android:text="59"/>

                <TextView
                    android:id="@+id/tv_song_num"
                    android:gravity="center_vertical"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/list"
                    android:text="10"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_album_info"
        android:layout_marginLeft="10dp"
        android:maxLines="3"
        android:textSize="13sp"
        android:drawableBottom="@drawable/down_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hudson="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hudson.donglingmusic.ui.view.LyricsView
        android:id="@+id/lv_lyrics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:background="@color/playpage_item_color" hudson:item_count="5"/>

    <LinearLayout
        android:id="@+id/locateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="invisible"
    >
        <ImageView
            android:id="@+id/iv_locate_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locate_play"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/theme_green"
        />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_function"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_modify"
                android:layout_width="0dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/modify"/>

            <ImageView
                android:id="@+id/iv_slow"
                android:layout_width="0dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/slow"/>

            <ImageView
                android:id="@+id/iv_accelerate"
                android:layout_width="0dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/accelerate"/>

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="0dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/copy"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_blue_bg"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/play_page_function"/>

    </LinearLayout>



</RelativeLayout>
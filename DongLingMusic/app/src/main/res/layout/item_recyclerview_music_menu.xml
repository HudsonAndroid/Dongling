<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_music_item_root"
              android:background="@drawable/selector_btn_blue_bg"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_music_menu_icon"
        android:padding="8dp"
        android:src="@drawable/music_menu_nextplay"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_music_menu_desc"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <View android:layout_width="match_parent"
              android:layout_marginRight="5dp"
              android:layout_height="0.5dp"
              android:background="@color/halfAppThemeColor"/>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tv_hot1"
                android:text="@string/app_name"
                style="@style/item_category_header_style"/>

            <TextView
                android:id="@+id/tv_hot2"
                android:text="@string/app_name"
                style="@style/item_category_header_style"/>

            <TextView
                android:id="@+id/tv_hot3"
                android:text="@string/app_name"
                style="@style/item_category_header_style"/>

            <TextView
                android:id="@+id/tv_hot4"
                android:text="@string/app_name"
                style="@style/item_category_header_style"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tv_hot5"
                android:text="@string/app_name"
                style="@style/item_category_header_style"/>

            <TextView
                android:id="@+id/tv_hot6"
                android:text="@string/app_name"
                style="@style/item_category_header_style"/>

            <TextView
                android:id="@+id/tv_hot7"
                android:text="@string/app_name"
                style="@style/item_category_header_style"/>

            <TextView
                android:id="@+id/tv_hot8"
                android:text="@string/app_name"
                style="@style/item_category_header_style"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/playpage_item_color"
                android:layout_height="match_parent">

    <com.hudson.donglingmusic.ui.view.BigBackgroundView
        android:id="@+id/bbv_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
    />

    <com.hudson.donglingmusic.ui.view.CircleVisualizerFFTView
        android:id="@+id/cvf_music_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />

    <com.hudson.donglingmusic.ui.view.RoundPlayDiskImageView
        android:id="@+id/rpdiv_disk"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />

</RelativeLayout>
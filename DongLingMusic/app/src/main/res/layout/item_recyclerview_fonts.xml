<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_font_root"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_font_item"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_fonts_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_fonts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fonts_preview"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="默认字体"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_font_selected"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:src="@drawable/font_selected"
        android:layout_alignBottom="@id/rl_font_root"
        android:layout_alignRight="@id/rl_font_root"
        android:layout_height="wrap_content"/>
</RelativeLayout>
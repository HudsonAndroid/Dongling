<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_gedan_item_root"
        android:orientation="vertical"
        android:layout_margin="7dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/selector_hot_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_gedan_bg"
            android:adjustViewBounds="true"
            android:maxHeight="400dp"
            android:maxWidth="400dp"
            android:minHeight="400dp"
            android:minWidth="400dp"
            android:src="@drawable/icon_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_listen_count"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:background="@drawable/gedan_listen_count_bg"
            android:drawableLeft="@drawable/gedan_headset"
            android:drawablePadding="3dp"
            android:layout_alignRight="@id/iv_gedan_bg"
            android:layout_alignTop="@id/iv_gedan_bg"
            android:text="1000"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_gedan_tag"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/iv_gedan_bg"
            android:layout_alignLeft="@id/iv_gedan_bg"
            android:drawableLeft="@drawable/gedan_tag"
            android:textColor="@color/white"
            android:background="@drawable/gedan_title_bg"
            android:text="纯音乐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_gedan_delete"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_blue_bg"
            android:src="@drawable/visible_color_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_gedan_title"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/app_name"
        android:lines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioImageView">
        <attr name ="src" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RecyclerViewItemState">
        <attr name="state_selected" format="boolean"/>
        <attr name="state_playing" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LyricsView">
        <attr name ="item_count" format="integer"/>
        <attr name ="focus_text_size" format="dimension"/>
        <attr name ="focus_text_color" format="color"/>
        <attr name ="normal_text_size" format="dimension"/>
        <attr name = "normal_text_color" format="color"/>
        <attr name = "scroll_time" format="integer"/>
        <attr name = "update_text_time" format="integer"/>
    </declare-styleable>

    <attr name="position">
        <enum name="left_top" value="0"></enum>
        <enum name="left_bottom" value="1"></enum>
        <enum name="right_top" value="2"></enum>
        <enum name="right_bottom" value="3"></enum>
    </attr>
    <attr name="radius" format="dimension"></attr>

    <declare-styleable name="ArcMenu">
        <attr name="position" />
        <attr name="radius" />
    </declare-styleable>

    <declare-styleable name="CircleVisualizerFFTView">
        <attr name ="cake_degree" format="float"/>
        <attr name ="cake_color" format="color"/>
        <attr name ="padding_offset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StepProgressView">
        <attr name ="circle_radius" format="dimension"/>
        <attr name ="step_counts" format="integer"/>
        <attr name ="padding_left" format="dimension"/>
        <attr name ="padding_right" format="dimension"/>
        <attr name ="padding_top" format="dimension"/>
        <attr name ="padding_bottom" format="dimension"/>
        <attr name ="reached_color" format="color"/>
        <attr name ="cur_color" format="color"/>
        <attr name ="bg_color" format="color"/>
        <attr name ="stroke_width" format="dimension"/>
        <attr name ="auto_adapte" format="boolean"/>
        <attr name ="text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SelectProgressBar">
        <attr name="style">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name ="line_length" format="dimension"/>
        <attr name ="select_circle_radius" format="dimension"/>
        <attr name ="line_stroke_width" format="dimension"/>
        <attr name ="min_value" format="integer"/>
        <attr name = "max_value" format="integer"/>
        <attr name="line_color" format="color"/>
        <attr name="circle_color" format="color"/>
        <attr name="select_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleSeekBar">
        <attr name="seekbar_radius" format="dimension"/>
        <attr name="reach_stroke_width" format="dimension"/>
        <attr name="unreach_stroke_width" format="dimension"/>
        <attr name="seekbar_reach_color" format="color"/>
        <attr name="seekbar_unreach_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleRoundImageView">
        <attr name ="round_rect_radius" format="dimension"/>
        <attr name="type">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
        </attr>
    </declare-styleable>
</resources>
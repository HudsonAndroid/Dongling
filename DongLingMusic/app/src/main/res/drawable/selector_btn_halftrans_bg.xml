<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/halfTransparent"
                android:centerColor="@color/halfTransparent"
                android:endColor="@color/halfTransparent"
                android:angle="270" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/halfTransparent"
                android:centerColor="@color/halfTransparent"
                android:endColor="@color/halfTransparent"
                android:angle="270" />
        </shape>
    </item>
</selector>